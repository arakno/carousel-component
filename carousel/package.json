{
  "name": "carousel",
  "version": "1.0.0",
  "description": "carousel component exercise",
  "main": "js/index.js",
  "scripts": {
    "prettier": "prettier --write **/*.{js,ts,tsx,json,css,scss,md,yml}",
    "lint": "eslint -c ./.eslintrc.js --ext .js,.jsx components/*",
    "a11y": "pa11y --config pa11y.config.json http://localhost:8080",
    "prepare": "snowpack --include './js/index.js'",
    "start": "servor --reload",
    "test": "karma start --coverage",
    "prepush": "npm run prettier && npm run lint && npm run a11y",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "test:update-snapshots": "karma start --update-snapshots",
    "test:prune-snapshots": "karma start --prune-snapshots",
    "test:bs": "karma start karma.bs.config.js --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "pre-push": "npm run prepush && npm test"
    }
  },
  "keywords": [],
  "author": "@arakno",
  "license": "ISC",
  "snowpack": {
    "webDependencies": [
      "lit-html",
      "lit-element",
      "lit-html/directives/until.js"
    ],
    "dedupe": [
      "lit-element",
      "lit-html"
    ]
  },
  "dependencies": {
    "d3": "^5.15.0",
    "lit-element": "^2.2.1",
    "lit-html": "^1.1.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "browser-env": "^3.3.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "pa11y": "^5.3.0",
    "prettier": "^1.19.1",
    "servor": "^3.2.0",
    "snowpack": "^1.5.1",
    "@open-wc/testing-karma": "^3.0.0",
    "deepmerge": "^3.2.0",
    "@open-wc/testing-karma-bs": "^1.0.0",
    "@open-wc/testing": "^2.0.0"
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": false
  },
  "lint-staged": {
    "./src/*.js": [
      "eslint -c ./.eslintrc.js --fix ./components/*.js"
    ],
    "**/*.{js,ts,tsx,json,css,scss,md,yml}": [
      "prettier --write",
      "git add"
    ]
  }
}
